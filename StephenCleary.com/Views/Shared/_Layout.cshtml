<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="http://ajax.aspnetcdn.com/ajax/jquery.mobile/1.1.1/jquery.mobile-1.1.1.min.css" />
    <link rel="stylesheet" href="Content/Site.css" />
    <script>
        // Fix IE 9.0.8112.16421
        // Test case:
        //   Open default page
        //   Browse to another page
        //   Browse back to the default page
        //   Refresh
        if (document.location.hash == '#/')
            document.location.href = document.location.href.split('#')[0];
    </script>
</head>
<body>
    @RenderBody()

    <script src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.7.1.min.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.mobile/1.1.1/jquery.mobile-1.1.1.min.js" type="text/javascript"></script>
</body>
</html>
